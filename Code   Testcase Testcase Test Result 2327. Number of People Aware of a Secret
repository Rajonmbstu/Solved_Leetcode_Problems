class Solution {
public:
    int peopleAwareOfSecret(int n, int delay, int forget) {
        long long int MOD=1000000007;
        vector<int>dp(n+1,0);
        dp[1]=1;
        int val=0;
        for(int i=2;i<=n;i++)
        {
            if(i-delay>0)
            val=(val+dp[i-delay]+MOD)%MOD;
            if(i-forget>0)
            val=(val-dp[i-forget]+MOD)%MOD;
            dp[i]=val;
        }
        int ans=0;
        for(int i=n-forget+1;i<=n;i++)
        ans=(ans+dp[i])%MOD;

        return ans;



        
    }
};
