class Solution {
public:
    double largestTriangleArea(vector<vector<int>>& p) {
        double ans=0;
        int n=p.size();
        for(int i=0;i<n-2;i++)
        {
            for(int j=0;j<n-1;j++){
                for(int k=0;k<n;k++){
                    auto &a=p[i],&b=p[j],&c=p[k];
                    ans=max(ans,0.5*abs(a[0]*(b[1]-c[1])+b[0]*(c[1]-a[1])+c  [0]*(a[1]-b[1])));

                }
            }

        }
        return ans;

        
    }
};
